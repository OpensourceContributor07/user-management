<!--Main site-->
<main id="site-main" >
    <div class="container">
      <div class="box-nav d-flex-justify-between">
        <div class="filter">
          <a href="/user"><i class="fas fa-angle-double-left"></i> All users</a>
          <div class="form-title text-center">
            <h2 class="text-dark">Update user</h2>
            <span class="text-light">Use the below form to update an account</span>
          </div>

        </div>
      </div>

  <!--add user form -->
        <!--form handaling-->
      <form  id="update_user"  method="post">
        <div class="new_user>
          <div class="form-group">
            <input type="hidden" name="_id" value="<%= user._id %>">
        <label for="firstname
        " class="text-light">First Name</label>
            
            <input type="text" name="firstname" value="<%= user.firstname %>" placeholder="Manan">
          </div>
          <div class="form-group">
            <label for="lastname" class="text-light">Last Name </label>
            
            <input type="text" name="lastname" value="<%= user.lastname %>" placeholder="kansara">
          </div>
          <div class="form-group">
            <label for="email" class="text-light">email</label>
            
            <input type="text" name="email" value="<%= user.email %>" placeholder="mkansara0903@outlook.com">
          </div>
          <div class="form-group">
            <label for="mobile" class="text-light">mobile Number</label>
            
            <input type="tel" name="mobile" value="<%= user.mobile %>" placeholder="">
          </div>
          <div class="form-group">
            <label for="hobby" class="text-light">Hobby</label>
            
            <input type="text" name="hobby" value="<%= user.hobby %>" placeholder="cricket,basketball,etc...">
          </div>
          <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="">
              <input type="radio" name="gender" value="Male" <%= user.gender == 'Male' ? 'checked' : '' %>>
              <label for="gender" class="text-light" >Male</label>
            </div>
            <div class="">
              <input type="radio" name="gender" value="female" <%= user.gender == 'female' ? 'checked' : '' %>>
              <label for="gender" class="text-light" >Female</label>
            </div>
          </div>
          <div class="form-group">
            <label for="name" class="text-light">Password</label>
            
            <input type="password" name="password" value="<%= user.password %>" >
          </div>
          <div class="form-group">
            <label for="name" class="text-light">Confirm Password</label>
            <input type="hidden" name="id" value="">
            <input type="password" name="confirmPassword" value="<%= user.confirmPassword %>" >
          </div>
          <button type="submit">Submit</button>
      </div>

       
  
      </form>
    </div>
  
  </main>
  
  
  
  
  <!--/Main site-->




<!--include footer-->
<%-include('partials/_footer')%>
<!--/include footer-->